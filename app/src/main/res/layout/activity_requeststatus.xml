<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"

        android:background="@drawable/shape2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6">


        <TextView
            android:id="@+id/hometitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Riet Hostel OutPass\nRequest Status"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.16000003" />

        <TextView
            android:id="@+id/totalconfirmed1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="8dp"
            android:text="Name"
            android:textColor="#000"
            android:textSize="18sp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hometitle" />

        <TextView
            android:id="@+id/totaldeath1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginTop="8dp"
            android:text="Hostel No."

            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/criticalglobalcases"
            app:layout_constraintTop_toBottomOf="@+id/criticalglobalcases" />

        <TextView
            android:id="@+id/studentname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="-----"

            android:maxLines="2"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/totalconfirmed1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/outtimeanddate" />

        <TextView
            android:id="@+id/hostelno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-----"

            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/totaldeath1"
            app:layout_constraintStart_toStartOf="@+id/outtimeanddate" />

        <ImageView
            android:id="@+id/imageviewicon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:src="@drawable/correct"
            app:layout_constraintBottom_toTopOf="@id/hometitle"
            app:layout_constraintEnd_toEndOf="@+id/hometitle"
            app:layout_constraintStart_toStartOf="@+id/hometitle" />

        <TextView
            android:id="@+id/criticalglobalcases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Time and\nDate"
            android:textColor="#000"

            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/totalconfirmed1"
            app:layout_constraintTop_toBottomOf="@+id/totalconfirmed1" />

        <TextView
            android:id="@+id/outtimeanddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="-----"
            android:textColor="#000"


            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/criticalglobalcases"
            app:layout_constraintStart_toEndOf="@+id/criticalglobalcases" />

        <TextView
            android:id="@+id/deathspermillion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"

            android:layout_marginEnd="8dp"
            android:layout_marginBottom="2dp"
            android:text="Transaction ID"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/transactionid"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/transactionid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:text="----"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginTop="4dp"
            android:text="Reason"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <TextView
            android:id="@+id/reason"
            android:layout_width="0dp"
            android:layout_height="wrap_content"


            android:layout_marginEnd="8dp"
            android:maxLines="3"
            android:text="whatever it takes"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/reqgranttimedate" />

        <TextView
            android:id="@+id/resultreq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="STATUS"
            android:textColor="@color/design_default_color_secondary_variant"

            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/deathspermillion"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_marginTop="10dp"

            android:text="req.time\ngrant time"
            android:textColor="#000"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/totaldeath1"
            app:layout_constraintTop_toBottomOf="@+id/totaldeath1" />

        <TextView
            android:id="@+id/reqgranttimedate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"

            android:text="time\ndate"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView11"

            app:layout_constraintStart_toStartOf="@+id/hostelno" />

    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>


